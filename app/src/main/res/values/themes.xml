<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFarm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>

        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="fontFamily">@font/urbanist_font_family</item>
    </style>

    <style name="Theme.MyFarm" parent="Base.Theme.MyFarm" />
</resources>