<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.AddFarmerFragment">

    <data>
        <variable
            name="viewModel"
            type="com.mendhie.myfarm.presentation.viewmodels.FarmerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            android:layout_marginTop="@dimen/screen_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/ic_nav_back" >
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text="Add farmer data"
                    android:layout_gravity="center" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/screen_padding"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="First Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="6dp"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Edittext.Body">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.farmer.firstName}"
                    android:hint="Enter first name"
                    android:onTextChanged="@{(text, start, before, count) ->viewModel.firstNameChanged(text)}"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Last Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:layout_marginTop="6dp"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"
                style="@style/Edittext.Body">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.farmer.lastName}"
                    android:onTextChanged="@{(text, start, before, count) ->viewModel.lastNameChanged(text)}"
                    android:hint="Enter last name"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Crop Type"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/title_field_margin"
                app:cardCornerRadius="8dp"
                app:strokeColor="#800D0D0D"
                app:strokeWidth="1dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnCropType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:entries="@array/crops"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="@dimen/title_field_margin" />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddFarmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:enabled="@{!viewModel.farmer.firstName.isEmpty() &amp;&amp; !viewModel.farmer.lastName.isEmpty() &amp;&amp; viewModel.farmer.cropType>0}"
                app:cornerRadius="8dp"
                android:padding="@dimen/screen_padding"
                android:text="Add Farmer"
                android:textAllCaps="false"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>